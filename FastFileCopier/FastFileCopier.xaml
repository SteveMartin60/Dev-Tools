<Window x:Class="FastFileCopier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:local="clr-namespace:FastFileCopier"
        Title="Ultra-Fast File Copier" 
        Height="850" 
        Width="1200"
        MinWidth="700"
        MinHeight="550"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <local:SizeConverter x:Key="SizeConverter"/>
    </Window.Resources>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <UniformGrid Columns="2">
            <!--............................................................-->
            <!--#region Source Section                                      -->
            <!--............................................................-->
            <Border Grid.Row="0" Grid.RowSpan="3" BorderBrush="#FFDDDDDD" BorderThickness="1" CornerRadius="4" Padding="10" Background="#FFF5F5F5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Source Folder" FontWeight="Bold" Margin="0,0,0,5"/>

                    <Grid Grid.Row="1" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="SourcePathTextBox" Grid.Column="0" Padding="5" IsReadOnly="True"/>
                        <Button Grid.Column="1" Content="Browse..." Click="BrowseSource_Click" Padding="8,3" MinWidth="80" Margin="5,0,0,0"/>
                    </Grid>

                    <GroupBox Grid.Row="2" Header="Files to Copy" BorderThickness="1" Padding="0">
                        <ListView x:Name="SourceFilesList" SelectionMode="Extended">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Name"     DisplayMemberBinding="{Binding Name          }" Width="200"/>
                                    <GridViewColumn Header="Modified" DisplayMemberBinding="{Binding LastWriteTime }" Width="150"/>
                                    <GridViewColumn Header="Type"     DisplayMemberBinding="{Binding Extension     }" Width="80" />
                                    <GridViewColumn Header="Size"     DisplayMemberBinding="{Binding Length, Converter={StaticResource SizeConverter}}" Width="100"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </GroupBox>
                </Grid>
            </Border>
            <!--............................................................-->
            <!--#endregion Source Section -->
            <!--............................................................-->
            <!--#region  Destination Section -->
            <Border Grid.Row="4" Grid.RowSpan="3" BorderBrush="#FFDDDDDD" BorderThickness="1" CornerRadius="4" Padding="10" Background="#FFF5F5F5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Destination Folder" FontWeight="Bold" Margin="0,0,0,5"/>

                    <Grid Grid.Row="1" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="DestFolderTextBox" Grid.Column="0" Padding="5" IsReadOnly="True"/>
                        <Button Grid.Column="1" Content="Browse..." Click="BrowseDestFolder_Click" Padding="8,3" MinWidth="80" Margin="5,0,0,0"/>
                    </Grid>

                    <GroupBox Grid.Row="2" Header="Existing Files in Destination" BorderThickness="1" Padding="0">
                        <ListView x:Name="DestFilesList" SelectionMode="Single">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="200"/>
                                    <GridViewColumn Header="Size" DisplayMemberBinding="{Binding Length, Converter={StaticResource SizeConverter}}" Width="100"/>
                                    <GridViewColumn Header="Modified" DisplayMemberBinding="{Binding LastWriteTime}" Width="150"/>
                                    <GridViewColumn Header="Type" DisplayMemberBinding="{Binding Extension}" Width="80"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </GroupBox>
                </Grid>
            </Border>
            <!--#endregion Destination Section -->
            <!--............................................................-->
        </UniformGrid>
        <!--................................................................-->
        <!--#region Progress Section                                        -->
        <Border Grid.Row="8" BorderBrush="#FFDDDDDD" BorderThickness="1" CornerRadius="4" Padding="10" Background="#FFF5F5F5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Transfer Progress" FontWeight="Bold" Margin="0,0,0,10"/>

                <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,15">
                    <ProgressBar x:Name="ProgressBar" Height="20" Margin="0,0,0,5"/>
                    <TextBlock x:Name="ProgressText" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Current Speed:" FontWeight="SemiBold"/>
                            <TextBlock x:Name="InstantSpeedText" Margin="0,2,0,5"/>

                            <TextBlock Text="Data Copied:" FontWeight="SemiBold" Margin="0,5,0,0"/>
                            <TextBlock x:Name="DataTransferredText" Margin="0,2,0,5"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Average Speed:" FontWeight="SemiBold"/>
                            <TextBlock x:Name="AverageSpeedText" Margin="0,2,0,5"/>

                            <TextBlock Text="Time Remaining:" FontWeight="SemiBold" Margin="0,5,0,0"/>
                            <TextBlock x:Name="TimeRemainingText" Margin="0,2,0,5"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="StartCopyButton" Content="Start Copy" Click="StartCopy_Click" Padding="25,5" Margin="0,0,10,0" FontWeight="Bold" MinWidth="120"/>
                    <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" Padding="25,5" Margin="10,0,0,0" FontWeight="Bold" MinWidth="120" IsEnabled="False"/>
                </StackPanel>
            </Grid>
        </Border>
        <!--................................................................-->
        <!--#endregion Progress Section                                     -->
        <!--................................................................-->
        <!--#region Status Bar -->
        <!--................................................................-->
        <StatusBar Grid.Row="10" Margin="0,10,0,0" Background="#FFEEEEEE" BorderBrush="#FFDDDDDD" BorderThickness="0,1,0,0">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" FontStyle="Italic" Foreground="#FF555555"/>
            </StatusBarItem>
        </StatusBar>
        <!--#endregion Status Bar -->
    </Grid>
</Window>
<!-- MainWindow.xaml -->
<Window x:Class="Mp3MetadataViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="MP3 Metadata Viewer" Height="650" Width="1156">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="5">
            <TextBox x:Name="FolderPathTextBox" Width="300" Margin="5"/>
            <Button Content="Browse" Click="BrowseButton_Click" Margin="5"/>
            <Button Content="Scan" Click="ScanButton_Click" Margin="5"/>
            <Button Content="Export" Click="ExportButton_Click" Margin="5"/>
        </StackPanel>

        <DataGrid x:Name="MetadataDataGrid" Grid.Row="1" Margin="5" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="150" />
                <DataGridTextColumn Header="File Size" Binding="{Binding FileSize}" Width="60"  />
                <DataGridTextColumn Header="Title"     Binding="{Binding Title   }" Width="150" />
                <DataGridTextColumn Header="Artist"    Binding="{Binding Artist  }" Width="120" />
                <DataGridTextColumn Header="Album"     Binding="{Binding Album   }" Width="120" />
                <DataGridTextColumn Header="Year"      Binding="{Binding Year    }" Width="60"  />
                <DataGridTextColumn Header="Track"     Binding="{Binding Track   }" Width="60"  />
                <DataGridTextColumn Header="Genre"     Binding="{Binding Genre   }" Width="100" />
                <DataGridTextColumn Header="Duration"  Binding="{Binding Duration}" Width="80"  />
                <DataGridTextColumn Header="Seconds"   Binding="{Binding Seconds }" Width="80"  />
                <DataGridTextColumn Header="Bitrate"   Binding="{Binding Bitrate }" Width="80"  />
                <DataGridTextColumn Header="BPM"       Binding="{Binding Bpm     }" Width="80"  />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
    
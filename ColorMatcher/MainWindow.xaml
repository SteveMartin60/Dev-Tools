<Window x:Class="ColorMatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorMatcher"
        mc:Ignorable="d"
        Title="Color Matcher" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Input Section -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Hex Color:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="HexInput" Width="100" VerticalAlignment="Center" Text="#FFFFFF"/>
            <Button Content="Find Closest Colors" Margin="10,0,0,0" Click="FindClosestColor_Click"/>
            <Button Content="Download All Color Sets" Margin="10,0,0,0" Click="DownloadAllColorSets_Click"/>
        </StackPanel>

        <!-- Status Text -->
        <TextBlock x:Name="StatusText" Grid.Row="1" Margin="0,0,0,10"/>

        <!-- Selected Color Display -->
        <Border Grid.Row="2" BorderBrush="Black" BorderThickness="1" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <Rectangle Width="50" Height="50" Fill="{Binding CustomColor}" Margin="10"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Your Color:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding CustomColorHex}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Nearest Colors Display -->
        <ItemsControl Grid.Row="4" ItemsSource="{Binding NearestColors}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1" Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Width="50" Height="50" Fill="{Binding ColorBrush}" Margin="10"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SetName}" FontStyle="Italic"/>
                                <TextBlock Text="{Binding HexValue}"/>
                                <TextBlock Text="{Binding Distance, StringFormat='Distance: {0:F2}'}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>
    
<Window x:Class="IconGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Icon Generator" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <!-- Input File Selection -->
            <TextBlock Text="Select Input PNG File:" FontWeight="Bold" Margin="0,0,0,5"/>
            <DockPanel>
                <TextBox x:Name="InputFilePath" IsReadOnly="True" Margin="0,0,5,0"/>
                <Button Content="Browse..." Click="BrowseInputFile_Click" Width="80"/>
            </DockPanel>

            <!-- Output File Path -->
            <TextBlock Text="Output ICO File Path:" FontWeight="Bold" Margin="0,10,0,5"/>
            <DockPanel>
                <TextBox x:Name="OutputFilePath" IsReadOnly="True" Margin="0,0,5,0"/>
                <Button Content="Save As..." Click="BrowseOutputFile_Click" Width="80"/>
            </DockPanel>

            <!-- Generate Button -->
            <Button Content="Generate Icon" Click="GenerateIcon_Click" Margin="0,20,0,0" Height="40" FontSize="16"/>

            <!-- Status Message -->
            <TextBlock x:Name="StatusMessage" Text="" Foreground="Green" Margin="0,10,0,0" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
    
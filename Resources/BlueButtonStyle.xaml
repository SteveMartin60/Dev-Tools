    <!--....................................................................-->
    <!-- Blue TextBox Style                                                 -->
    <!--....................................................................-->
    <Style x:Key="BlueTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="White" />
        <Setter Property="Foreground" Value="#2196F3" />
        <Setter Property="BorderBrush" Value="#90CAF9" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
    </Style>

    <!--....................................................................-->
    <!-- Blue Label Style                                                   -->
    <!--....................................................................-->
    <Style x:Key="BlueLabelStyle" TargetType="Label">
        <Setter Property="Foreground" Value="#2196F3" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Padding" Value="0,0,0,5" />
        <Setter Property="HorizontalAlignment" Value="Left" />
    </Style>

    <!--....................................................................-->
    <!-- Blue Grid Style                                                    -->
    <!--....................................................................-->
    <Style x:Key="BlueGridStyle" TargetType="Grid">
        <Setter Property="Background" Value="#F5FBFF" />
        <Setter Property="Margin" Value="10" />
    </Style>

    <!--....................................................................-->
    <!-- Blue Border Style                                                  -->
    <!--....................................................................-->
    <Style x:Key="BlueBorderStyle" TargetType="Border">
        <Setter Property="BorderBrush" Value="#90CAF9"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Background" Value="#F5FBFF"/>
        <Setter Property="Padding" Value="1"/>
        <Setter Property="Margin" Value="1"/>
    </Style>
    <!--....................................................................-->
</ResourceDictionary>
    
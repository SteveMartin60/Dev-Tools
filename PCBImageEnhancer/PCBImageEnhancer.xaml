<Window x:Class="PCBImageEnhancer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PCB Image Enhancer" Height="800" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Original Image -->
        <Image Name="OriginalImage" Grid.Column="0" Grid.Row="0" Stretch="Uniform" Margin="10"/>

        <!-- Processed Image -->
        <Image Name="ProcessedImage" Grid.Column="1" Grid.Row="0" Stretch="Uniform" Margin="10"/>

        <!-- Sliders and Controls -->
        <StackPanel Orientation="Vertical" Grid.ColumnSpan="2" Grid.Row="1" Margin="10">
            <!-- Brightness -->
            <StackPanel Orientation="Vertical" Margin="0,5">
                <TextBlock Text="Brightness" FontWeight="Bold"/>
                <Slider Name="BrightnessSlider" Minimum="-100" Maximum="100" Value="0" TickFrequency="1" 
                IsSnapToTickEnabled="True"/>
            </StackPanel>

            <!-- Contrast -->
            <StackPanel Orientation="Vertical" Margin="0,5">
                <TextBlock Text="Contrast" FontWeight="Bold"/>
                <Slider Name="ContrastSlider" Minimum="0" Maximum="200" Value="100" TickFrequency="1" 
                IsSnapToTickEnabled="True"/>
            </StackPanel>

            <!-- Gamma -->
            <StackPanel Orientation="Vertical" Margin="0,5">
                <TextBlock Text="Gamma" FontWeight="Bold"/>
                <Slider Name="GammaSlider" Minimum="0.1" Maximum="3.0" Value="1.0" TickFrequency="0.1" 
                IsSnapToTickEnabled="True"/>
            </StackPanel>

            <!-- Histogram Equalization -->
            <CheckBox Name="HistogramEqualizationCheckbox" Content="Histogram Equalization" Margin="0,5"/>
        </StackPanel>
    </Grid>
</Window>
    
<!-- WebView2.xaml -->
<Window x:Class="WebView2Browser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="WebView2 Browser" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="22"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <!--............................................................-->
            <Grid Grid.Row="0" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!--............................................................-->
                <UniformGrid x:Name="UniformGrid_Buttons" Columns="4" Grid.Column="0">
                    <Button    x:Name="BackButton"    Content="←" Width="40" Height="25" Margin="2" Click="BackButton_Click"    />
                    <Button    x:Name="ForwardButton" Content="→" Width="40" Height="25" Margin="2" Click="ForwardButton_Click" />
                    <Button    x:Name="RefreshButton" Content="↻" Width="40" Height="25" Margin="2" Click="RefreshButton_Click" />
                    <Button    x:Name="HomeButton"    Content="⌂" Width="40" Height="25" Margin="2" Click="HomeButton_Click"    />
                </UniformGrid>
                <!--............................................................-->
                <Grid x:Name="Grid_Address" Grid.Column="1" HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox   x:Name="AddressBar" Grid.Column="0" MinWidth="400" Margin="5,2" HorizontalAlignment="Stretch"/>
                    <Button    x:Name="GoButton"   Grid.Column="1" Content="Go" Width="50" Margin="2" Click="GoButton_Click"/>
                </Grid>
                <!--............................................................-->
                <StackPanel x:Name="StackPanel_Tools" Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Right">
                    <!--............................................................-->
                    <Button       x:Name="DevToolsButton"     Content="DevTools"      Width="100" Height="25" Margin="5,2" Click="DevToolsButton_Click"/>
                    <Button       x:Name="CaptureHtmlButton"  Content="Capture HTML"  Width="100" Height="25" Margin="5,2" Click="CaptureHtmlButton_Click"/>

                    <ToggleButton x:Name="ToggleImagesButton" Content="Images On/Off" Width="100" Height="25" Margin="5,2" VerticalAlignment="Center" IsChecked="False" Checked="ToggleImages_Changed" Unchecked="ToggleImages_Changed"/>
                    <ToggleButton x:Name="ToggleVideosButton" Content="Videos On/Off" Width="100" Height="25" Margin="5,2" VerticalAlignment="Center" IsChecked="False" Checked="ToggleVideos_Changed" Unchecked="ToggleVideos_Changed"/>
                    <!--............................................................-->
                    <Button x:Name="StopButton" Content="Stop" Width="60" Height="25" Margin="5,2" Click="StopButton_Click"/>
                    <!--............................................................-->
                </StackPanel>
                <!--............................................................-->
            </Grid>
            <!--............................................................-->
            <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="0 0 0 1" Background="#FFF5F5F5" Visibility="Visible">
                <StackPanel Orientation="Horizontal" Margin="6">
                    <TextBox x:Name="FindBox" Width="200" Margin="0 0 6 0" VerticalContentAlignment="Center" KeyDown="FindBox_KeyDown"/>
                    <Button x:Name="FindNextBtn" Content="▼" Width="30" Click="FindNext_Click"/>
                    <Button x:Name="FindPrevBtn" Content="▲" Width="30" Margin="2 0 6 0" Click="FindPrev_Click"/>
                    <CheckBox x:Name="CaseSensitiveChk" Content="Aa" Margin="0 0 6 0" ToolTip="Case sensitive"/>
                    <TextBlock x:Name="MatchLabel" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
            <!--............................................................-->
        </StackPanel>
        <TextBlock x:Name="StatusText" Margin="2" Grid.Row="2" Text="Test"/>
        <TabControl Grid.Row="1">
            <wv2:WebView2 x:Name="WebViewControl" Grid.Row="1"/>
        </TabControl>
    </Grid>
</Window>

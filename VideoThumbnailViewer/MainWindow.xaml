<Window x:Class="VideoThumbnailViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:VideoThumbnailViewer"
        Title="Video Thumbnail Viewer" Height="450" Width="1000" MinWidth="540">
    <Window.Resources>
        <local:ThumbnailPathConverter x:Key="ThumbnailPathConverter"/>
        <local:WidthToColumnsConverter x:Key="WidthToColumnsConverter"/>
        <Style x:Key="InfoTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,4,0,4"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="MaxWidth" Value="500"/>
        </Style>
        <Style x:Key="InfoLabelStyle" TargetType="TextBlock" BasedOn="{StaticResource InfoTextBlockStyle}">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1E88E5"/>
        </Style>
        <Style x:Key="TitleTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource InfoTextBlockStyle}">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#1E88E5"/>
            <Setter Property="TextAlignment" Value="Left"/>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="ButtonTranslate" Content="Translate" Click="ButtonTranslate_Click" Width="100" Margin="0,0,10,0" Background="#1E88E5" Foreground="White" Padding="10,5" BorderThickness="0"/>
            <Button x:Name="SelectFolderButton" Content="Select Folder" Click="SelectFolderButton_Click" Width="100" Margin="0,0,10,0" Background="#1E88E5" Foreground="White" Padding="10,5" BorderThickness="0"/>
            <TextBlock x:Name="FolderPathTextBlock" VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="14"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="VideoList" ItemsSource="{Binding}"
                          VirtualizingStackPanel.IsVirtualizing="True"
                          ScrollViewer.CanContentScroll="True">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ScrollViewer}, Converter={StaticResource WidthToColumnsConverter}}"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="10" Width="520">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Image Grid.Row="0" Width="500" Stretch="Uniform" MouseLeftButtonDown="Thumbnail_MouseLeftButtonDown" Cursor="Hand">
                                <Image.Source>
                                    <Binding Path="ThumbnailPath" Converter="{StaticResource ThumbnailPathConverter}" 
                                             FallbackValue="{StaticResource PlaceholderImage}" 
                                             TargetNullValue="{StaticResource PlaceholderImage}"/>
                                </Image.Source>
                            </Image>

                            <Border Grid.Row="1" Background="#F5F5F5" CornerRadius="5" Padding="10" Margin="0,5,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource TitleTextBlockStyle}">
                                        <Run Text="{Binding EnglishTitle}"/>
                                        <LineBreak/>
                                        <Run Text="{Binding ChineseTitle}"/>
                                    </TextBlock>
                                    
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="File Size:" Style="{StaticResource InfoLabelStyle}"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding FileSize}" Style="{StaticResource InfoTextBlockStyle}"/>
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Resolution:" Style="{StaticResource InfoLabelStyle}"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Resolution}" Style="{StaticResource InfoTextBlockStyle}"/>
                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Duration:" Style="{StaticResource InfoLabelStyle}"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Duration}" Style="{StaticResource InfoTextBlockStyle}"/>
                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="FPS:" Style="{StaticResource InfoLabelStyle}"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding FPS}" Style="{StaticResource InfoTextBlockStyle}"/>
                                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Audio Sample Rate:" Style="{StaticResource InfoLabelStyle}"/>
                                    <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding AudioSampleRate}" Style="{StaticResource InfoTextBlockStyle}"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
    
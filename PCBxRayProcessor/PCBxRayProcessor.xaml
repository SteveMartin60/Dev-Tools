<Window x:Class="PCBxRayProcessor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PCBxRayProcessor"
        mc:Ignorable="d"
        Title="PCB X-ray Image Processor" Height="800" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Controls Panel -->
        <StackPanel Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal">
            <Button Content="Load Image" Click="LoadImage_Click" Margin="5" Padding="10,5"/>
            <Button Content="Reset Adjustments" Click="ResetAdjustments_Click" Margin="5" Padding="10,5"/>
            <CheckBox Content="Auto Apply" IsChecked="{Binding AutoApply}" Margin="5" VerticalAlignment="Center"/>
            <Button Content="Apply" Click="ApplyProcessing_Click" Margin="5" Padding="10,5">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="IsEnabled" Value="True"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ElementName=AutoApplyCheck, Path=IsChecked}" Value="True">
                                <Setter Property="IsEnabled" Value="False"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <!-- Original Image -->
        <GroupBox Grid.Column="0" Grid.Row="1" Header="Original Image" Margin="5">
            <Image x:Name="OriginalImage" Stretch="Uniform"/>
        </GroupBox>

        <!-- Processed Image -->
        <GroupBox Grid.Column="1" Grid.Row="1" Header="Processed Image" Margin="5">
            <Image x:Name="ProcessedImage" Stretch="Uniform"/>
        </GroupBox>

        <!-- Adjustment Controls -->
        <TabControl Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Margin="5">
            <TabItem Header="Basic Adjustments">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="Brightness:"/>
                        <Slider Grid.Row="0" Grid.Column="1" x:Name="BrightnessSlider" Minimum="-1" Maximum="1" Value="0" 
                                SmallChange="0.01" LargeChange="0.1" ValueChanged="Adjustment_ValueChanged"/>
                        <TextBox Grid.Row="0" Grid.Column="2" Text="{Binding Value, ElementName=BrightnessSlider, StringFormat=N2}" Width="40"/>

                        <Label Grid.Row="1" Grid.Column="0" Content="Contrast:"/>
                        <Slider Grid.Row="1" Grid.Column="1" x:Name="ContrastSlider" Minimum="0" Maximum="2" Value="1" 
                                SmallChange="0.01" LargeChange="0.1" ValueChanged="Adjustment_ValueChanged"/>
                        <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding Value, ElementName=ContrastSlider, StringFormat=N2}" Width="40"/>

                        <Label Grid.Row="2" Grid.Column="0" Content="Gamma:"/>
                        <Slider Grid.Row="2" Grid.Column="1" x:Name="GammaSlider" Minimum="0.1" Maximum="5" Value="1" 
                                SmallChange="0.05" LargeChange="0.2" ValueChanged="Adjustment_ValueChanged"/>
                        <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding Value, ElementName=GammaSlider, StringFormat=N2}" Width="40"/>

                        <Label Grid.Row="3" Grid.Column="0" Content="Histogram Clip %:"/>
                        <Slider Grid.Row="3" Grid.Column="1" x:Name="HistogramClipSlider" Minimum="0" Maximum="10" Value="0.5" 
                                SmallChange="0.1" LargeChange="0.5" ValueChanged="Adjustment_ValueChanged"/>
                        <TextBox Grid.Row="3" Grid.Column="2" Text="{Binding Value, ElementName=HistogramClipSlider, StringFormat=N1}" Width="40"/>
                    </Grid>
                </StackPanel>
            </TabItem>
            <TabItem Header="Advanced Adjustments">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="Edge Enhancement:"/>
                        <Slider Grid.Row="0" Grid.Column="1" x:Name="EdgeEnhancementSlider" Minimum="0" Maximum="2" Value="0" 
                                SmallChange="0.05" LargeChange="0.2" ValueChanged="Adjustment_ValueChanged"/>
                        <TextBox Grid.Row="0" Grid.Column="2" Text="{Binding Value, ElementName=EdgeEnhancementSlider, StringFormat=N2}" Width="40"/>

                        <Label Grid.Row="1" Grid.Column="0" Content="Sharpen:"/>
                        <Slider Grid.Row="1" Grid.Column="1" x:Name="SharpenSlider" Minimum="0" Maximum="2" Value="0" 
                                SmallChange="0.05" LargeChange="0.2" ValueChanged="Adjustment_ValueChanged"/>
                        <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding Value, ElementName=SharpenSlider, StringFormat=N2}" Width="40"/>

                        <Label Grid.Row="2" Grid.Column="0" Content="Noise Reduction:"/>
                        <Slider Grid.Row="2" Grid.Column="1" x:Name="NoiseReductionSlider" Minimum="0" Maximum="1" Value="0" 
                                SmallChange="0.01" LargeChange="0.1" ValueChanged="Adjustment_ValueChanged"/>
                        <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding Value, ElementName=NoiseReductionSlider, StringFormat=N2}" Width="40"/>
                    </Grid>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
    
<Window x:Class="ScreenColorPicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Screen Color Picker"
        Height="200" Width="350"
        Topmost="True"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="Pick Color"
                Width="100"
                Height="30"
                HorizontalAlignment="Left"
                Click="PickColor_Click"/>

        <Border x:Name="ColorPreview"
                Grid.Row="2"
                Width="80"
                Height="80"
                BorderBrush="Black"
                BorderThickness="1"
                CornerRadius="4"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
        </Border>

        <StackPanel Grid.Row="2"
                    Orientation="Vertical"
                    Margin="90,0,0,0">
            <TextBlock Text="RGB:"
                       FontWeight="Bold"/>
            <TextBlock x:Name="RgbText"
                       Margin="0,2,0,8"/>

            <TextBlock Text="HEX:"
                       FontWeight="Bold"/>
            <TextBlock x:Name="HexText"
                       Margin="0,2,0,0"/>
        </StackPanel>

        <TextBlock Grid.Row="4"
                   Text="Click 'Pick Color' then click anywhere on the screen (any monitor) to sample a pixel. Press Esc to cancel."
                   TextWrapping="Wrap"
                   Margin="0,10,0,0"/>
    </Grid>
</Window>
